<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Character Network</title>
    <link rel="stylesheet" type="text/css" href="/styles/styles.css">
</head>
<style>
    .color1 {
        color: darkblue;
    }
    
    .projectButton {
        height: 50px;
        background-color: lightblue;
        font-weight: bold;
    }
    
    .projectButton:hover {
        background-color: aliceblue;
    }
    
    .box {
        border-left: 5px solid blue;
        background-color: aliceblue;
        padding: 10px;
        width: 50%;
    }
    
</style>
<body>
    <div>
        <%- include('partials/header.ejs') %>
    </div>
    <div>
        <% for(let i = 0; i < projects.length; ++i){ %>
                <div class="box">
                    <form action="/projects/projectPage?projectID=<%= projects[i].projectID %>" method="post">
                        <input type="submit" class="projectButton" value="<%= projects[i].projectName %>">
                        <p><%= projects[i].projectDescription %></p>
                    </form>
                </div><br>
        <% } %>
    </div>
</body>
</html>
