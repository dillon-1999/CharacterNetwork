<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Projects - Admin</title>
    <link rel="stylesheet" type="text/css" href="/styles/styles.css">
</head>
<style>
</style>
<body>
    <% if(session.isLoggedIn && session.role === 1){ %>

        <a href="../users/homepage?userID=<%=session.userID%>"><div class='text-center color1' id="header">
            <h1>Character Network</h1>
        </div></a>
        <div>
            <% if(projects.length > 0){ %>
                <% for(let i = 0; i < projects.length; ++i){ %>
                        <div class="box">
                            <form action="/projects/projectPage?projectID=<%= projects[i].projectID %>" method="post">
                                <input type="submit" class="projectButton" value="<%= projects[i].projectName %>">
                                <p><%= projects[i].projectDescription %></p>
                            </form>
                        </div><br>
                <% } %>
          <% } else{ %>
                <h1>No projects to display!</h1>
          <% } %>
        </div>
    <% } else { %>
        <%- include('partials/accessDenied.ejs') %>
    <% } %>
</body>
</html>
